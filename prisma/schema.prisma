// This is your Prisma schema file
// Learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// NextAuth.js required models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Application models
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String? // For credentials provider

  // Profile data
  dateOfBirth   DateTime?
  sex           Sex?
  weight        Float? // kg
  height        Float? // cm
  activityLevel ActivityLevel?
  goal          Goal?

  // Calculated metrics (cached for performance)
  bmi           Float?
  bmr           Float? // Basal Metabolic Rate
  tdee          Float? // Total Daily Energy Expenditure
  idealWeight   Float?
  bodyFatPercent Float?

  // Weight goal tracking
  targetWeight          Float? // kg - poids cible défini par l'utilisateur
  weeklyWeightChangeGoal Float? // kg/semaine (négatif pour perte, positif pour gain)
  estimatedTargetDate    DateTime? // date estimée pour atteindre l'objectif

  // Daily targets
  dailyCalories Int?
  dailyProtein  Int?
  dailyCarbs    Int?
  dailyFat      Int?

  // Onboarding status
  onboardingCompleted Boolean @default(false)

  // Relations
  accounts      Account[]
  sessions      Session[]
  meals         Meal[]
  preferences   UserPreferences?
  weightHistory WeightHistory[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email])
}

model UserPreferences {
  id        String   @id @default(cuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  allergies String? // JSON string for SQLite, array for PostgreSQL
  dislikes  String? // JSON string for SQLite, array for PostgreSQL
  dietType  String? // vegetarian, vegan, keto, paleo, etc.

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Meal {
  id             String   @id @default(cuid())
  userId         String
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  imageUrl       String
  mealType       MealType
  timestamp      DateTime @default(now())

  // Nutrition totals
  totalCalories  Int
  totalProtein   Float
  totalCarbs     Float
  totalFat       Float

  // AI analysis metadata
  confidence     Float
  notes          String?

  // Relations
  foods          FoodItem[]

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([userId, timestamp])
}

model FoodItem {
  id       String @id @default(cuid())
  mealId   String
  meal     Meal   @relation(fields: [mealId], references: [id], onDelete: Cascade)

  name     String
  portion  String // "150g", "1 cup", etc.
  calories Int
  protein  Float
  carbs    Float
  fat      Float

  @@index([mealId])
}

model WeightHistory {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  weight    Float // kg
  date      DateTime @default(now())
  notes     String?

  createdAt DateTime @default(now())

  @@index([userId, date])
}

// Enums
enum Sex {
  MALE
  FEMALE
  OTHER
}

enum ActivityLevel {
  SEDENTARY   // Peu ou pas d'exercice
  LIGHT       // Exercice léger 1-3 jours/semaine
  MODERATE    // Exercice modéré 3-5 jours/semaine
  ACTIVE      // Exercice intense 6-7 jours/semaine
  VERY_ACTIVE // Exercice très intense + travail physique
}

enum Goal {
  LOSE_WEIGHT  // Perte de poids
  MAINTAIN     // Maintien
  GAIN_MUSCLE  // Prise de masse musculaire
}

enum MealType {
  BREAKFAST
  LUNCH
  DINNER
  SNACK
}
